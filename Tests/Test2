INICIO:

DCL xcv;
DCL vf;
DCL bv DEFAULT 1;
DCL mnb DEFAULT 10;

EnCaso
	Cuando bv < 2 EnTons
		{
            INC(bv, 1);
		}
	Cuando bv = 2 EnTons
		{
            DEC(bv, 1);
		}
	Cuando bv = mnb EnTons
		{

		EnCaso
		    Cuando bv < 1 Entons
		        {
		        INC(bv,100);
		        INC(bv,100);
		        INC(bv,100);
		        }
		    Cuando bv < 5 Entons
		    {
		    INC(bv,50);
		    }
		    SiNo{


		    INC(bv,1);

		    }
		 Fin-EnCaso;



		}
	SiNo
	{
	    EnCaso
	        Cuando bv < 100 Entons
	        {
	            INC(bv, 300);
	            INC(bv,100);
	        }
	        SiNo{
	            INC(bv,150);
	        }
	    Fin-EnCaso;
	}


Fin-EnCaso;



FIN;

PROC  hola()
inicio:

fin;

