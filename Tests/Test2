INICIO:

DCL xcv;
DCL vf;
DCL bv DEFAULT 5;
DCL mnb DEFAULT 10;

EnCaso
	Cuando bv = 1 EnTons
		{
            DEC(bv, 1);
		}
	Cuando bv = 2 EnTons
		{
            DEC(bv, 1);
		}
	Cuando bv < mnb EnTons
		{

		INC(bv, 4);
		INC(bv,100);
		INC(bv,200);
		DEC(bv,3);



		}
	SiNo
	{
        INC(bv, 4);
	}
Fin-EnCaso;



FIN;

PROC  hola()
inicio:

fin;

