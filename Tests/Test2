INICIO:


DCL vf;
DCL bv DEFAULT 10;
DCL mnb DEFAULT 10;

EnCaso
	Cuando bv = 1 EnTons
		{
            INC(bv, 1);
		}
	Cuando bv = 2 EnTons
		{
            INC(bv, 2);
		}
	Cuando bv < mnb EnTons
		{
		INC(bv,4);

		}

	SiNo
	{
        INC(bv, 4);
	}
Fin-EnCaso;

DCL xcv;

FIN;

PROC  hola()
inicio:

fin;


(('DCL', 'vf', ';'), ('DCL', 'bv', 'DEFAULT', 10), ('DCL', 'mnb', 'DEFAULT', 10), ('ENCASO', ((('CUANDO', 'bv', '=', 1, 'ENTONS', ('INC', 'bv', 1)), ('CUANDO', 'bv', '=', 2, 'ENTONS', ('INC', 'bv', 2)), ('CUANDO', 'bv', '<', 'mnb', 'ENTONS', ('INC', 'bv', 4))), 'SINO', ('INC', 'bv', 4)), 'FINENCASO'), ('DCL', 'xcv', ';'))

