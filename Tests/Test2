INICIO:

DCL xcv;
DCL vf;
DCL bv DEFAULT 2;
DCL mnb DEFAULT 10;

EnCaso
	Cuando bv = 2 EnTons
		{
            INC(bv, 1);
            INC(bv,10);
            Mover(A);
		}
	Cuando bv = 2 EnTons
		{
            DEC(bv, 1);
		}
	Cuando bv = 11 EnTons
		{

		EnCaso
		    Cuando bv < 7 Entons
		        {
		        INC(bv,100);
		        INC(bv,100);
		        INC(bv,100);
		        }
		    Cuando bv < 5 Entons
		    {
		    INC(bv,50);
		    }
		    SiNo{


		    INC(bv,1);

		    }
		 Fin-EnCaso;



		}
	SiNo
	{
	    EnCaso
	        Cuando bv < 11 Entons
	        {
	            INC(bv, 300);
	            INC(bv,100);
	        }
	        SiNo{
	            INC(bv,150);
	        }
	    Fin-EnCaso;
	}


Fin-EnCaso;



FIN;

Proc procedimiento2 (cc, bb)
inicio:

Mover(A);
INC(bv,10);

