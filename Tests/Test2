INICIO:

DCL xcv;
DCL vf;
DCL bv DEFAULT 100;
DCL mnb DEFAULT 10;

EnCaso
	Cuando bv = 1 EnTons
		{
            DEC(bv, 1);
		}
	Cuando bv = 2 EnTons
		{
            DEC(bv, 1);
		}
	Cuando bv < mnb EnTons
		{
		INC(bv,4);

		}

	SiNo
	{
        INC(bv, 4);
	}
Fin-EnCaso;



FIN;

PROC  hola()
inicio:

fin;

